{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "moduleResolution": "node",
    "strict": false,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018"
    ]
  },
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "extends": "expo/tsconfig.base"
}
